<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h1>Welcome to <%= name %>'s Portfolio</h1>
        <p><%= about %></p>
    </header>

    <section id="projects">
        <h2>Projects</h2>
        <ul>
            <% projects.forEach(function(project){ %>
                <li>
                    <h3><%= project.title %></h3>
                    <p><%= project.description %></p>
                </li>
            <% }); %>
        </ul>
    </section>

    <section id="contact">
        <h2>Contact Me</h2>
        <p>If you would like to get in touch, please email me at <a href="mailto:<%= contactEmail %>"><%= contactEmail %></a>
        </p>
    </section>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> <%= name %>. All rights reserved.</p>
    </footer>

</body>
</html>